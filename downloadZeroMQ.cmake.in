cmake_minimum_required(VERSION 3.1)
include(ExternalProject)

ExternalProject_Add(libzmq
    GIT_REPOSITORY https://github.com/zeromq/libzmq.git
    GIT_TAG v4.3.2

    SOURCE_DIR "${PROJECT_SOURCE_DIR}/third_party/libzmq"

    CONFIGURE_COMMAND "${PROJECT_SOURCE_DIR}/third_party/libzmq/configure -prefix=${CMAKE_BINARY_DIR}/"

    UPDATE_COMMAND ""
    PATCH_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""

    LOG_DOWNLOAD ON
    LOG_CONFIGURE ON
    LOG_BUILD ON
    LOG_INSTALL ON
)

ExternalProject_Add(cppzmq
    GIT_REPOSITORY https://github.com/zeromq/cppzmq.git
    GIT_TAG v4.4.1

    SOURCE_DIR "${PROJECT_SOURCE_DIR}/third_party/cppzmq"

    UPDATE_COMMAND ""
    PATCH_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""

    LOG_DOWNLOAD ON
    LOG_CONFIGURE ON
    LOG_BUILD ON
    LOG_INSTALL ON
)